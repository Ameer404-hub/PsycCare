<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MoodTab">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/checkinsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/moodLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/moodCheckInLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/metrophobic"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizeButton"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/moodHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dateView"
                        android:layout_marginBottom="2.5dp"
                        android:fontFamily="@font/metrophobic"
                        android:gravity="start"
                        android:text="Mood Check In:"
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizePrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/moodTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/moodHeading"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/metrophobic"
                        android:text=""
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizePrimary" />

                    <TextView
                        android:id="@+id/descHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/moodTitle"
                        android:layout_marginBottom="2.5dp"
                        android:fontFamily="@font/metrophobic"
                        android:text="Description:"
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizePrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/moodDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/descHeading"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/metrophobic"
                        android:text=""
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizePrimary" />

                    <TextView
                        android:id="@+id/moodAnalysis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/moodDescription"
                        android:fontFamily="@font/metrophobic"
                        android:text="Analysis:"
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizePrimary"
                        android:textStyle="bold" />

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/moodAnalysis"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp" />

                </RelativeLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10sp"
                    android:background="@color/black" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>