<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ScreenBGcolorPrimary"
    tools:context=".ThoughtCheckin">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ToolbarColorSecondary"
        android:elevation="2dp"
        android:theme="@style/Theme.PsycCare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#FFFFFF">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/corben_bold"
            android:text="Thoughts Check-in"
            android:textColor="@color/ToolbarTextColorPrimary"
            android:textSize="@dimen/TextsizeToolbar" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/myThoughts_BG"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mythoughts_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metrophobic"
        android:gravity="center"
        android:text="Track what thoughts are on you mind"
        android:textColor="@color/TextColorPrimary"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myThoughts_BG" />

    <ScrollView
        android:id="@+id/moodScroll"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading1">

        <LinearLayout
            android:id="@+id/moodIconsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/thoughstLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtPositive"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Positive"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Positive"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtNegative"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Negative"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Negative"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thoughstLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtEmotional"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Emotional"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Emotional"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtBlaming"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Blaming"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Blaming"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtFear"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Fear"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Fear"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thoughstLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtCatastrophic"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Catastrophic"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Catastrophic"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtCalamitous"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Calamitous"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Calamitous"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thoughstLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtAssertive"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Assertive"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Assertive"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtAffirmative"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Affirmative"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Affirmative"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtOptimistic"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Optimistic"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Optimistic"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thoughstLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtPessimistic"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="Pessimistic"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Pessimistic"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtInferring"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="Inferring"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Inferring"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thoughstLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtDisgust"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Disgust"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Disgust"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtOther"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Other"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="Other"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/thoughtNotSure"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="Not Sure"
                    app:cornerRadius="20dp"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/metrophobic"
                    android:textSize="@dimen/TextsizePrimary"
                    android:textColor="@color/TextColorSecondary"
                    android:backgroundTint="@color/ButtonColorThird"
                    android:onClick="NotSure"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/myThoughts_summary"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/metrophobic"
        android:gravity="start"
        android:text="Summarize a situation that bothered or upset you:"
        android:textAllCaps="false"
        android:textColor="@color/TextColorPrimary"
        android:textSize="@dimen/TextsizePrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moodScroll" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/thought_TextArea"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_for_textarea"
        android:elevation="2dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myThoughts_summary">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/metrophobic"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="3"/>

        <ImageView
            android:id="@+id/sendThoughtNote"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/bg_for_sendbutton"
            app:srcCompat="@drawable/ic_baseline_send_24"
            android:elevation="2dp"
            android:padding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/snackBarAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thought_TextArea">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>